@model IEnumerable<WebBlog.Web.Models.PostsViewModel>;
@{
    ViewBag.Title = "Все статьи";
}



<div>
    @if(@User.IsInRole("admin"))
    {
    <a class="btn btn-primary" asp-action="Create" >Добавить новую статью</a>
    }
</div>


@foreach (var item in Model)
{


    <div class="card ">
        <div class="row g-0">
            <div class="col-md-4">
                <img src=@item.Image class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Annotation</p>
                      <p class="card-text"><small class="text-muted">Автор @item.User?.UserName</small></p>
                      <div class="btn-group">
                          <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Детали </a>
                          @if (@User.IsInRole("admin"))
                          {
                              <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Изменить </a>

                              <form asp-controller="Post" asp-action="Delete" method="post" asp-route-id="@item.Id">
                                  <input class="btn btn-primary" type="submit" value="Удалить" />
                              </form>
                          }

                          @*   <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Комментировать </a> *@
                      </div>

                </div>
            </div>
        </div>
    </div>



}


