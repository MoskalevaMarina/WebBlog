@model IEnumerable<WebBlog.Web.Models.UserViewModel>;
@{
    ViewBag.Title = "Все пользователи";
}

<div>
    <a class="btn btn-primary" asp-action="Create">Добавить нового пользователя</a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>НикНейм</th>
            <th>Пароль</th>
            <th>Email</th>
           <th></th>
            <th>Дата</th>
            <th>Роли</th>
            <th>Статьи</th>
            <th>Комментарии</th>
            <th>  </th>
            <th>  </th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            <td>@item.Email</td>
            <td>
                <form asp-controller="User" asp-action="Profile" method="post" asp-route-id="@item.Id">
                    <input class="btn btn-primary" type="submit" value="Профиль" />
                </form>

            </td>
            <td>@item.DataCreate</td>
            <td>
                @foreach (var item1 in item.Roles)
                {
                    @item1.Name <br />
                }
                  </td>
            <td>
                @item.Posts.Count()
            </td>
            <td>
                @item.Comments.Count()
            </td>


            <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Изменить </a></td>
            <td>
                <form asp-controller="User" asp-action="Delete" method="post" asp-route-id="@item.Id">
                    <input class="btn btn-primary" type="submit" value="Удалить" />
                </form>

            </td>
        </tr>

    }
</table>

