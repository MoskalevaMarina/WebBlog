@model WebBlog.Web.Models.UserViewModel;

<body>


    
    <hr>
    <div class="container bootstrap snippet">
        <div class="row ">
            <div class="col-5">
                <h1 class="text-center">@Model.UserName</h1>
                <div><img title="profile image" class="img-responsive img-fluid" src="@Model.Avatar"> </div>
              <div >
                <ul class="list-group list-group-horizontal d-flex justify-content-center">
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Статьи</strong></span> @Model.Posts.Count()</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Теги</strong></span> @Model.Tags.Count()</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Комментарии</strong></span> @Model.Comments.Count()</li>
                </ul>
                  </div>
            </div>
            <div class="col-5">

                <div class="tab-content">
                    <div class="tab-pane active">
                        <hr>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name"><h4>Имя</h4></label>
                                <p> @Model.FirstName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name"><h4>Фамилия</h4></label>
                                <p> @Model.LastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name"><h4>Пароль</h4></label>
                                <p> @Model.Password</p>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name"><h4>Email</h4></label>
                                <p> @Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        @if (User.IsInRole("admin"))
                        {
                            <label class="control-label"><h4>Роли:</h4> </label> <br />
                            @foreach (var item in Model.Roles)
                            {
                                <p> @item.Name</p>
                            }
                        }
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-user"> Редактировать  </a>
                    </div>
                </div>
            </div>



           



            </div><!--/col-3-->

        </div>
        <hr>

    </div>

</body>