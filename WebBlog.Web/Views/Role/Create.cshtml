@model WebBlog.Web.Models.RoleViewModel;
@{
    ViewData["Title"] = "Добавление роли";
}


<div class="block-reg mb-6">
    <h3 class="center">Добавление роли</h3>
    <p> </p>
    <form class="frm" method="post" asp-controller="Role" asp-action="Create">

        <div>
            <label asp-for="Name" class="form-label">Наименование</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea class="form-control" asp-for="Description"> </textarea>
            <span asp-validation-for="Description"></span>
        </div>


        <div class="center">
            <input type="submit" class="btn btn-add"  value="Добавить"  />
        </div>
    </form>

    <div>
        <a asp-action="Index" asp-controller="Role">Перейти к списку всех ролей</a>
    </div>
</div>
