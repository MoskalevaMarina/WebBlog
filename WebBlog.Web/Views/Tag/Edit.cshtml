@model WebBlog.Web.Models.TagViewModel;
@{
    ViewData["Title"] = "Изменение тега";
}


<div class="block-reg  col-md-6">
    <h3 class="center">Редактирование тега</h3>
    <p> </p>
    <form class="frm" method="post" asp-controller="Tag" asp-action="Edit">

        <div >
            <label asp-for="Name" class="form-label">Название</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>


        <div class="center">
            <input type="submit" class="btn btn-add"  value="Сохранить" />
        </div>
    </form>
 
    <div>
        <a asp-action="Index" asp-controller="Tag">Перейти к списку всех тегов</a>
    </div>
</div>
